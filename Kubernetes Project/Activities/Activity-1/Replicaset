apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: caddy-replicaset
spec:
  replicas: 3
  selector:
    matchLabels:
      app: caddy
  template:
    metadata:
      labels:
        app: caddy
    spec:
      containers:
      - name: caddy
        image: docker.io/caddy:latest
        ports:
        - containerPort: 80